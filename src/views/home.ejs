<html lang="en">

<!--Head-->
<%- include('partials/head', {stylesheet: ['style'], title: 'Inicio'}) %>

<body  id="principal">
    
    <!--Header-->
    <%- include('partials/header') %>
    <main id="main-home">
        <div class="main-img-container">
            <div class="div-main-img1">
                <img src="img/main-img.jpg" alt="main-img" class="main-img1">
            </div>
            <div class="div-logo-banner">
                <img src="img/logo-blanco.png" class="logo-banner"><!--provisorio, cuando se borre borrar tambien ".logo-banner" en el css-->
            </div>
        </div>
