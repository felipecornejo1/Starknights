<!DOCTYPE html>
<html lang="en">

<!--Head-->
<%- include('../partials/head', {stylesheet: 'style', title: 'Nuevo Item'}) %>

<body>

    <!--Header-->
    <%- include('../partials/header') %>

    <main>
        <!--Formulario de item-->
        <% if(locals.errors) { %>
            <form action="/marketplace/subir-item" method="post" class="item-form">
                <h1 class="form-title">Subir Nuevo Item</h1>
                <input type="text" id="name" name="name" class="casillas" placeholder="Título" value="<%= old.name %>">
                <% if(errors.name) { %>
                    <p class="form-error active">Completa este campo</p>
                <% } %>
                <input type="number" min="0.001" step="0.001" name="price" class="casillas" placeholder="Precio" value="<%= old.price %>">
                <% if(errors.price) { %>
                    <p class="form-error active">Completa este campo</p>
                <% } %>
                <select name="category" class="casillas" value="<%= old.category %>">
                    <% if(errors.category) { %>
                        <option value="">Elegir Categoría</option>
                        <option value="naves">Naves</option>
                        <option value="armaduras">Armaduras</option>
                        <option value="mascotas">Mascotas</option>
                    <% } else { %>
                        <option value="<%= old.category %>"><%= old.category %></option>
                        <option value="naves">Naves</option>
                        <option value="armaduras">Armaduras</option>
                        <option value="mascotas">Mascotas</option>
                    <% } %>
                </select>
                <% if(errors.category) { %>
                    <p class="form-error active">Elige una opción</p>
                <% } %>
                <button type="submit" class="save-button">Guardar</button>
            </form>
            
        <% } else { %>
            <form action="/marketplace/subir-item" method="post" class="item-form">
                <h1 class="form-title">Subir Nuevo Item</h1>
                <input type="text" id="name" name="name" class="casillas" placeholder="Título">
                <input type="number" min="0.001" step="0.001" name="price" class="casillas" placeholder="Precio">
                <select name="category" class="casillas">
                    <option value="">Elegir Categoría</option>
                    <option value="naves">Naves</option>
                    <option value="armaduras">Armaduras</option>
                    <option value="mascotas">Mascotas</option>
                </select>
                <button type="submit" class="save-button">Guardar</button>
            </form>
        <% } %>
    </main>

    <!--Footer-->
    <%- include('../partials/footer') %>

</body>
</html>