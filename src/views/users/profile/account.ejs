        <div class="acc-view">
            <div class="acc-box column" id="wallet-box">
                <i class="fab fa-brands fa-ethereum"></i>
                <h1>
                    Wallet
                </h1>
                <p id="acc-wallet-balance"><%= locals.user.wallet_balance %>  ETH</p>
                <div id="deposit-withdraw">
                    <form action="/users/profile/account/eth-airdrop" method="post">
                        <button type="submit" id="airdrop-button">Depositar</button>
                    </form>
                    <form action="/users/profile/account/eth-airdrop" method="post">
                        <button type="submit" id="airdrop-button">Retirar</button>
                    </form>
                </div>
                <% if(locals.user.claimed_airdrop != 1) { %>
                    <form action="/users/profile/account/eth-airdrop?_method=PUT" method="post">
                        <button type="submit" id="airdrop-button">Reclamar 1 ETH</button>
                    </form>
                <% } %>
            </div>
        </div>

    </main>

</body>